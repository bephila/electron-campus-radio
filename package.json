{
  "name": "electron-campus-radio",
  "version": "1.0.0",
  "description": "Campus radio streaming app built with Electron, WebSocketâ†’FFmpeg bridge, and HLS viewer",
  "main": "src/main.js",
  "author": "Your Name",
  "license": "ISC",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "start:caddy": "caddy run",
    "start:stream": "node src/stream-server.js",
    "start:servers": "npm run start:caddy & npm run start:stream",
    "serve": "caddy run",
    "stream": "node src/stream-server.js",
    "dev": "concurrently \"npm run start:caddy\" \"npm run start:stream\" \"npm start\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "hls",
    "radio",
    "stream"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^35.2.2",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.cheers.campus-radio",
    "productName": "Cheers",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "ffmpeg-7.1.1/",
        "to": "ffmpeg-7.1.1/"
      },
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "icon": "assets/icon.png",
      "category": "public.app-category.music"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cheers",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
